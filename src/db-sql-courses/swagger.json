{
  "openapi": "3.0.0",
  "info": {
    "title": "Online Courses API",
    "description": "API для системи онлайн-курсів",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "tags": [
    { "name": "Students", "description": "Операції зі студентами" },
    { "name": "Courses", "description": "Операції з курсами" }
  ],
  "paths": {
    "/students": {
      "get": {
        "summary": "Отримати всіх студентів",
        "tags": ["Students"],
        "responses": {
          "200": {
            "description": "Список студентів",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "name": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/students/avg": {
      "get": {
        "summary": "Отримати середній бал студентів",
        "tags": ["Students"],
        "responses": {
          "200": {
            "description": "Середні оцінки студентів"
          }
        }
      }
    },
    "/students/top": {
      "get": {
        "summary": "Отримати студента з найвищим середнім балом",
        "tags": ["Students"],
        "responses": {
          "200": {
            "description": "Найкращий студент"
          }
        }
      }
    },
    "/students/course/{courseName}": {
      "get": {
        "summary": "Отримати список студентів за курсом",
        "tags": ["Students"],
        "parameters": [
          {
            "name": "courseName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Назва курсу"
          }
        ],
        "responses": {
          "200": {
            "description": "Список студентів"
          }
        }
      }
    },
    "/courses": {
      "get": {
        "summary": "Отримати всі курси",
        "tags": ["Courses"],
        "responses": {
          "200": {
            "description": "Список курсів"
          }
        }
      }
    },
    "/courses/count": {
      "get": {
        "summary": "Отримати кількість студентів у кожному курсі",
        "tags": ["Courses"],
        "responses": {
          "200": {
            "description": "Кількість студентів у курсах"
          }
        }
      }
    },
    "/courses/high-rated/{minGrade}": {
      "get": {
        "summary": "Отримати курси з середнім балом > minGrade",
        "tags": ["Courses"],
        "parameters": [
          {
            "name": "minGrade",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Мінімальний бал"
          }
        ],
        "responses": {
          "200": {
            "description": "Список курсів"
          }
        }
      }
    }
  }
}
